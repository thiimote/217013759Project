<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6EBA3"
    tools:context=".Register">

    <TextView
        android:id="@+id/registrationform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration form"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="40sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registrationform"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="40dp"/>
    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerEmail"
        android:hint="Password"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="40dp"/>
    <Button
        android:id="@+id/submitRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerPassword"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="30dp"
        android:text="Submit"
        android:layout_marginStart="80dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/haveAnAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitRegister"
        android:text="Already Have an Account?"
        android:textAlignment="textEnd"
        android:layout_marginEnd="40dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>